style preferences_item_hbox:
    spacing 32
    xfill True

style preferences_item_slider_hbox:
    spacing 8

style preferences_item_label is pref_label:
    xsize 0.3

style preferences_item_label_text is pref_label_text:
    xalign 1.0
    yanchor 0.5
    ypos 0.0
    size 20

style preferences_item_slider:
    xsize 0.7

style preferences_item_check is check_button:
    xsize gui.slider_size
    ysize gui.slider_size
