    xmargin 12

style help_button_text:
    properties gui.button_text_properties("help_button")

style help_label:
    xsize 200
    right_padding 30

style help_label_text:
    size gui.text_size
    xalign 1.0
    textalign 1.0

style help_text:
    font gui.text_font
    size 24
